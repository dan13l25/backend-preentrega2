{{#if isValid}}
<h2>Lista de productos</h2>
<hr>
<div>
    {{#each Product}}
     <div>
            <h2>{{title}}</h2>
            <p>Description: {{this.description}}</p>
            <p>Price: ${{this.price}}</p>
        </div>
    <br/>
    {{/each}}
</div>
<br/>
<hr>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h2>No hay productos para mostrar</h2>
{{/if}}

